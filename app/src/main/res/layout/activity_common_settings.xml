<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_common_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="de.zebrajaeger.androidpanohead2.activity.CommonSettingsActivity">

    <Button
            android:text="20%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_marginTop="85dp" android:id="@+id/button20" android:onClick="onSetOverlap20"/>
    <Button
            android:text="33%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/button20" android:layout_alignParentLeft="true"
            android:id="@+id/button33" android:onClick="onSetOverlap33"/>
    <Button
            android:text="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/button20" android:layout_toRightOf="@+id/button20"
            android:layout_marginLeft="10dp" android:id="@+id/button25" android:onClick="onSetOverlap25"/>
    <Button
            android:text="50%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button50"
            android:layout_below="@+id/button25" android:layout_alignLeft="@+id/button25" android:onClick="onSetOverlap50"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="OverlapX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_overlap_x"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/edit_overlap_X"/>
            <TextView
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="OverlapY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_overlap_y"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/edit_overlap_y"/>
            <TextView
                    android:text="%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>
</RelativeLayout>
